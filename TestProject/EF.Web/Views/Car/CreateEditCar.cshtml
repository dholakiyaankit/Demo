@model EF.Core.Data.Car

@{
    ViewBag.Title = "Create Edit Car";
}
<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">Add / Edit Car</div>
    <div class="panel-body">
        
            @using (Html.BeginForm("CreateEditCar", "Car", FormMethod.Post))
            {

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Model, new { @class = "col-lg-1 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Model, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Model)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Make, new { @class = "col-lg-1 control-label" })
                    <div class="col-lg-9">
                        @if (Model.ID!=0)
                        {
                            @Html.EditorFor(model => model.Make, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(model => model.Make)
                        }
                        else
                        { 
                        @Html.TextBoxFor(model => model.Make, new { @class = "form-control", @type = "date" })
                        @Html.ValidationMessageFor(model => model.Make)
                        }
                    </div>
                </div>
               
                <div class="form-group">
                    <div class="col-lg-8"></div>
                    <div class="col-lg-3">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
                        <button class="btn btn-success" id="btnSubmit" type="submit">
                            Submit
                        </button>
                    </div>
                </div>
            </div>       
        }
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="~/Scripts/book-create-edit.js" type="text/javascript"></script>
}
